#!/bin/bash -eu
#
# Import 'firmware' from a preinstalled Ubuntu armhf raspi image
#

function out()
{
	local rc=${?}

	if [ -n "${MOUNTD}" ] ; then
		partumount -s "${MOUNTD}"/boot/firmware || true
		partumount -s "${MOUNTD}" || true
		echo "-- Image partitions unmounted from ${MOUNTD}"
	fi

	if [ -n "${IMAGE}" ] ; then
		rm -f "${IMAGE}"
	fi

	if [ "${rc}" -ne 0 ] ; then
		echo "** Error: Script failed" >&2
	fi
}

function find_so()
{
	local root=${1} bin=${2}

	echo "${bin}"

	while IFS= read -r line ; do
		so=${line%\]*}
		so=${so##*\[}

		for libdir in /lib /lib/arm-linux-gnueabihf ; do
			bin=${libdir}/${so}
			if [ -e "${root}/${bin}" ] ; then
				find_so "${root}" "${bin}"
				break
			fi
		done
	done < <(arm-linux-gnueabihf-readelf -d "${root}/${bin}" 2>/dev/null | \
				 grep ' Shared library: ' || true)
}

function usage()
{
	cat <<EOF
Usage: import-firmware [-h] IMAGE|DIR

Import firmware binaries and libraries from the provided IMAGE.

IMAGE         An Ubuntu raspi preinstalled armhf server image.
DIR           A directory where an Ubuntu raspi preinstalled armhf server image
              is mounted.

Optional arguments:
  -h, --help  Show this help text and exit.
EOF
}

image=

while [ "${#}" -gt 0 ] ; do
	case "${1}" in
		-h|--help)
			usage
			exit
			;;
		*)
			if [ -z "${image}" ] ; then
				image=${1}
			else
				echo "** Error: Invalid argument: ${1}" >&2
				exit 2
			fi
			;;
	esac
	shift
done

if [ -z "${image}" ] ; then
	usage
	exit 2
fi

if ! [ -d firmware ] ; then
	echo "** Error: No such directory: ./firmware" >&2
	exit 2
fi

MOUNTD=
IMAGE=
trap out EXIT INT TERM HUP

if [ -d "${image}" ] ; then
	# Assume it's an already mounted image
	rootd=${image}
else
	# Decommpress the image to a temporary location
	if [ "${image%.xz}" != "${image}" ] ; then
		echo "-- Decompress image"
		IMAGE=$(mktemp)
		xzcat "${image}" > "${IMAGE}"
		image=${IMAGE}
	fi

	# Mount the image
	MOUNTD=$(partmount -ro -s "${image}" 2)
	partmount -ro "${image}" 1 "${MOUNTD}"/boot/firmware > /dev/null
	rootd=${MOUNTD}

	echo "-- Image partitions mounted on ${MOUNTD}"
fi

rm -rf firmware

# Create directory tree
mkdir -p firmware/boot/firmware
mkdir -p firmware/usr/{bin,lib,sbin}
ln -s usr/bin firmware/bin
ln -s usr/lib firmware/lib
ln -s usr/sbin firmware/sbin

echo "-- Copy kernel and DTBs"

for f in "${rootd}"/boot/firmware/{bcm*.dtb,vmlinuz} ; do
	echo "--   ${f#${rootd}}"
	cp  "${f}" firmware/boot/firmware/
done

echo "-- Copy binaries and libraries"

cp "${rootd}"/lib/klibc-*.so firmware/lib/

bins=(
	/bin/busybox
	/usr/bin/gzip
	/usr/bin/wget
	/usr/sbin/dhclient
	/usr/sbin/dhclient-script
)
for bin in "${bins[@]}" ; do
	while IFS= read -r b ; do
		if ! [ -e firmware/"${b}" ] ; then
			echo "--   ${b}"
			mkdir -p firmware/"${b%/*}"
			cp "${rootd}/${b}" firmware/"${b}"
		fi
	done <  <(find_so "${rootd}" "${bin}" | sort -u)
done

echo "-- Copy kernel modules"

mods=(
	r8152.ko
)
for mod in "${mods[@]}" ; do
	while IFS= read -r m ; do
		echo "--   /${m}"
		mkdir -p firmware/"${m%/*}"
		cp "${rootd}/${m}" firmware/"${m}"
	done < <(cd "${rootd}" && find lib/modules -type f -name "${mod}")
done
