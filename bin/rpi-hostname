#!/bin/bash -eu
#
# Set the hostname based on the Raspberry Pi model, revision, memory size and
# serial number
#

function get_hostname()
{
	local model serial revision mem

	model=$(tr -d '\0\n' < /proc/device-tree/model)
	model=${model,,}
	model=${model#raspberry pi }
	model=${model/compute module /cm}
	model=${model/zero /zero}
	model=${model/ model /}
	model=${model/ rev / rev}
	model=${model// /-}
	model=${model//./d}

	serial=$(tr -d '\0\n' < /proc/device-tree/serial-number)
	serial=${serial: -4}

	case "${model}" in
		4b-*|400-*|cm4-*)
			revision=$(awk '/^Revision/ { print "0x" $NF }' /proc/cpuinfo)
			case "$(((revision >> 20) & 7))" in
				0) mem="256mb" ;;
				1) mem="512mb" ;;
				2) mem="1gb" ;;
				3) mem="2gb" ;;
				4) mem="4gb" ;;
				5) mem="8gb" ;;
				*) mem="xxx" ;;
			esac
			echo "rpi-${model}-${mem}-${serial}"
			;;
		*)
			echo "rpi-${model}-${serial}"
			;;
	esac
}

function usage()
{
	cat <<EOF
Usage: rpi-hostname [-h] [get|set|unset]

Get, set or unset the hostname based on the Raspberry Pi model and serial
number.

Postional arguments:
  -h, --help  Print the current help text and exit.
EOF
}

action="get"

while [ $# -ne 0 ] ; do
	case "${1}" in
		-h|--help)
			usage
			exit
			;;
		get|set|unset)
			action=${1}
			;;
		*)
			echo "** Error: Invalid argument: ${1}" >&2
			exit 2
			;;
	esac
	shift
done

case "${action}" in
	get)
		hostname=$(get_hostname)
		echo "${hostname}"
		exit
		;;
	set)
		hostname=$(get_hostname)
		if [ "$(hostname)" = "${hostname}" ] ; then
			echo "Hostname is already set to: ${hostname}"
			exit
		fi

		# Set the hostname and make it persistent
		hostname "${hostname}"
		mv /etc/hostname /etc/hostname.rpi
		echo "${hostname}" > /etc/hostname

		# Update /etc/hosts
		cat <<EOF >>/etc/hosts
# rpi-hostname
127.0.1.1 ${hostname}.localdomain ${hostname}
EOF
		;;
	unset)
		if ! [ -e /etc/hostname.rpi ] ; then
			echo "** Error: Unable to unset hostname" \
				 "(no such file: /etc/hostname.rpi)" >&2
			exit 1
		fi

		# Revert the hostname change and make it persistent
		hostname=$(cat /etc/hostname.rpi)
		hostname "${hostname}"
		mv /etc/hostname.rpi /etc/hostname

		# Revert the update of /etc/hosts
		sed -i -e '/^# rpi-hostname$/,+1d' /etc/hosts
esac

echo "Hostname set to: ${hostname}"
